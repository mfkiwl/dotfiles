# vim: ft=bash

# Shell

alias ..='cd ..'
alias ...='cd ../..'
alias ,,='cd ..'

alias x="exit"

alias ls='ls --color=auto'
alias ll='ls -lav --ignore=..'   # show long listing of all except ".."

mkcd() {
    mkdir -p $* && cd $*
}

# rm pwd after cd one level up
rmup() {
    pwd=$(pwd)
    cd ..
    read -p "Remove ${pwd} ? " choice
    case "$choice" in
        y|Y) echo "removing ${pwd}"; rm -rf "$pwd" ;;
    esac
}
