# vim: ft=bash

# Bash

alias ..='cd ..'
alias ...='cd ../..'
alias ls='ls --color=auto'
alias ll='ls -lav --ignore=..'   # show long listing of all except ".."

mkcd() {
    mkdir -p $* && cd $*
}


# Vim

alias v="vim"

# vim fuzzy find file with fd
vf() {
  local file=$(fd -i -t f | grep -v __pycache__ | fzf --multi -q "$1" --preview='less {}')
  if [ "$file" != "" ]; then
    vim ${@:2} $file
  fi
}
